@{
    ViewData["Title"] = "Home Page";
}


<!-- Hero Section Begin -->
<section class="hero-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <div class="hero-text">
                    <h1>Sona Hotel</h1>
                    <p>
                        Here are the best hotel booking sites, including recommendations for international
                        travel and for finding low-priced hotel rooms.
                    </p>
                    <a href="#" class="primary-btn">Keşfet</a>
                </div>
            </div>

            <div class="col-xl-4 col-lg-5 offset-xl-2 offset-lg-1">
                <div class="booking-form">
                    <h3>Aradığınız oteli hemen bulun </h3>

                    <form asp-controller="Home"
                          asp-action="SearchHotel"
                          method="get">


                        <div class="check-date">
                            <label>Şehir</label>
                            <input type="text"
                                   name="cityName"
                                   placeholder="Istanbul"
                                   required />
                        </div>


                        <div class="check-date">
                            <label>Giriş Tarihi</label>
                            <input type="date"
                                   name="checkIn" />
                        </div>

                       
                        <div class="check-date">
                            <label>Çıkış tarihi</label>
                            <input type="date"
                                   name="checkOut" />
                        </div>

                       
                        <div class="select-option">
                            <label>Misafir Sayısı</label>
                            <select name="adults">
                                <option value="1">1 Yetişkin</option>
                                <option value="2" selected>2 Yetişkin</option>
                                <option value="3">3 Yetişkin</option>
                                <option value="4">4 Yetişkin</option>
                            </select>
                        </div>

                        <button type="submit">Otel Ara..</button>
                    </form>
                </div>

            </div>
     
        </div>
    </div>
    <div class="hero-slider owl-carousel">
        <div class="hs-item set-bg" data-setbg="/sona-master/img/hero/hero-1.jpg"></div>
        <div class="hs-item set-bg" data-setbg="/sona-master/img/hero/hero-2.jpg"></div>
        <div class="hs-item set-bg" data-setbg="/sona-master/img/hero/hero-3.jpg"></div>
    </div>
</section>
<!-- Hero Section End -->




<!-- About Us Section Begin -->

@await Component.InvokeAsync("_UIAboutUsComponent")

<!-- About Us Section End -->

<!-- Services Section End -->
@await Component.InvokeAsync("_UIServicesComponent")
<!-- Services Section End -->

<!-- Home Room Section Begin -->
@await Component.InvokeAsync("_UIHeroRoomComponent")
<!-- Home Room Section End -->

<!-- Testimonial Section Begin -->
@await Component.InvokeAsync("_UITestimonialComponent")
<!-- Testimonial Section End -->

<!-- Blog Section Begin -->
@await Component.InvokeAsync("_UIBlogComponent")
<!-- Blog Section End -->
