
@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<section class="info-cards mt-4">
   
        <div class="row g-3">
 
            <div class="col-lg-3 col-md-6">
                @await Component.InvokeAsync("_UIWeatherComponent")
            </div>

            <div class="col-lg-3 col-md-6">
                @await Component.InvokeAsync("_UIExchangeComponent")
            </div>

             <div class="col-lg-3 col-md-6">
                @await Component.InvokeAsync("_UICryptoComponent")
            </div>  

           <div class="col-lg-3 col-md-6">
            @await Component.InvokeAsync("_UIFuelComponent")

            </div>

        </div>

</section>

<br />
<br />

<!-- Hero Section Begin -->
<section class="hero-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <div class="hero-text">
                    <h1>Sona Otel</h1>
                    <p>
                        Uluslararası seyahatler için öneriler sunan ve uygun fiyatlı otel
                        odalarını bulmanızı sağlayan en iyi otel rezervasyon sitelerini keşfedin.
                    </p>
                    <a href="/" class="primary-btn">Keşfet</a>
                </div>
            </div>


            <div class="col-xl-4 col-lg-5 offset-xl-2 offset-lg-1">
                <div class="booking-form">
                    <h3>Aradığınız oteli hemen bulun </h3>

                    <form asp-controller="Home"
                          asp-action="Index"
                          method="get">



                        <div class="check-date">
                            <label>Şehir</label>
                            <input type="text"
                                   name="cityName"
                                   placeholder="Istanbul"
                                   required />
                        </div>


                        <div class="check-date">
                            <label>Giriş Tarihi</label>
                            <input type="date"
                                   name="checkIn" />
                        </div>

                       
                        <div class="check-date">
                            <label>Çıkış tarihi</label>
                            <input type="date"
                                   name="checkOut" />
                        </div>

                       
                        <div class="select-option">
                            <label>Misafir Sayısı</label>
                            <select name="adults">
                                <option value="1">1 Yetişkin</option>
                                <option value="2" selected>2 Yetişkin</option>
                                <option value="3">3 Yetişkin</option>
                                <option value="4">4 Yetişkin</option>
                            </select>
                        </div>

                        <button type="submit">Otel Ara..</button>
                    </form>
                </div>

            </div>
     
        </div>
    </div>
    <div class="hero-slider owl-carousel">
        <div class="hs-item set-bg" data-setbg="/sona-master/img/hero/hero-2.jpg"></div>
        <div class="hs-item set-bg" data-setbg="/sona-master/img/hero/hero-7.jpg"></div>
        <div class="hs-item set-bg" data-setbg="/sona-master/img/hero/hero-4.jpg"></div>
        <div class="hs-item set-bg" data-setbg="/sona-master/img/hero/hero-5.avif"></div>
    </div>
</section>
<!-- Hero Section End -->

@await Component.InvokeAsync("_UIHotelListComponent")

<!-- About Us Section Begin -->


<div class="container mt-5">
    <div class="row">
        <div class="col-md-6">
            <h4>🍽️ Günün Yemeği</h4>
@*             @await Component.InvokeAsync("_UIClaudeComponent") *@
            @await Component.InvokeAsync("_UIMealComponent")
        </div>

        <div class="col-md-6">
            <h4>🗺️ Gezi Rotası Önerisi</h4>
            @await Component.InvokeAsync("_UIOpenAIRotaComponent")

        </div>

    </div>
</div>

@await Component.InvokeAsync("_UIAboutUsComponent")

<!-- About Us Section End -->

<!-- Services Section End -->
@await Component.InvokeAsync("_UIServicesComponent")
<!-- Services Section End -->


<!-- Testimonial Section Begin -->
@await Component.InvokeAsync("_UITestimonialComponent")
<!-- Testimonial Section End -->



<style>
    .info-card {
        background: #fff;
        border-radius: 18px;
        padding: 18px;
        min-height: 160px;
        box-shadow: 0 10px 25px rgba(0,0,0,.08);
        transition: transform .3s ease;
    }

        .info-card:hover {
            transform: translateY(-4px);
        }

    .market-section .info-card {
        min-height: 260px;
        padding: 24px;
        border-radius: 20px;
    }

        .market-section .info-card h5 {
            font-size: 18px;
        }

</style>



<style>
    .route-container {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border-radius: 20px;
        padding: 25px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.2);
        min-height: 400px;
        max-height: 550px;
        overflow-y: auto;
    }

    .route-header h5 {
        font-size: 18px;
        font-weight: 700;
        margin: 0;
    }

    .places-list {
        display: flex;
        flex-direction: column;
        gap: 15px;
    }

    .place-item {
        background: white;
        border-radius: 12px;
        padding: 15px;
        display: flex;
        gap: 15px;
        align-items: flex-start;
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

        .place-item:hover {
            transform: translateX(5px);
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        }

    .place-icon {
        width: 80px;
        height: 80px;
        border-radius: 10px;
        overflow: hidden;
        flex-shrink: 0;
        background: #f0f0f0;
    }

        .place-icon img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

    .place-info {
        flex: 1;
    }

        .place-info h6 {
            font-size: 15px;
            font-weight: 700;
            color: #2d3748;
            margin-bottom: 8px;
        }

        .place-info p {
            font-size: 13px;
            color: #4a5568;
            line-height: 1.5;
            margin: 0;
        }

    .route-container::-webkit-scrollbar {
        width: 6px;
    }

    .route-container::-webkit-scrollbar-track {
        background: rgba(255,255,255,0.1);
        border-radius: 10px;
    }

    .route-container::-webkit-scrollbar-thumb {
        background: rgba(255,255,255,0.3);
        border-radius: 10px;
    }

        .route-container::-webkit-scrollbar-thumb:hover {
            background: rgba(255,255,255,0.5);
        }
</style>