<style>
    .weather-widget {
        display: flex;
        align-items: center;
        gap: 14px;
        background: rgba(255, 255, 255, 0.95);
        border-radius: 14px;
        padding: 14px 18px;
        box-shadow: 0 10px 28px rgba(0, 0, 0, 0.08);
    }

    .weather-left img {
        width: 56px;
        height: 56px;
    }

    .weather-right {
        display: flex;
        flex-direction: column;
    }

        .weather-right .city {
            font-size: 14px;
            font-weight: 600;
        }

        .weather-right .temp {
            font-size: 22px;
            font-weight: bold;
        }

        .weather-right .desc {
            font-size: 13px;
            color: #666;
            text-transform: capitalize;
        }
    .weather-widget.day {
        background: rgba(255, 255, 255, 0.95);
        color: #222;
    }

    .weather-widget.night {
        background: linear-gradient(135deg, #1e293b, #0f172a);
        color: #fff;
    }

        .weather-widget.night .desc {
            color: #cbd5f5;
        }

        .weather-widget.night .city {
            color: #e0e7ff;
        }

</style>