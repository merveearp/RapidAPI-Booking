@model ResultWeatherDto
@{
    ViewData["Title"] = "Home Page";

    var icon = Model.weather[0].icon; 
    bool isNight = icon.EndsWith("n");
    var iconUrl = $"https://openweathermap.org/img/wn/{icon}@2x.png";
}


@if (Model?.weather != null && Model.weather.Length > 0)
{
    <div class="weather-card @(isNight ? "night" : "day")">

        <div class="weather-header">
            <div class="weather-icon">
               <img src="https://openweathermap.org/img/wn/@(Model.weather[0].icon + "@2x.png")"
     alt="@Model.weather[0].description" />

            </div>

            <div class="weather-main">
                <h4>@Model.name, @Model.sys.country</h4>
                <div class="weather-temp">@Math.Round(Model.main.temp)°C</div>
                <span class="weather-desc">@Model.weather[0].description</span>
            </div>
        </div>

        <div class="weather-details">
            <div class="detail-item">
                <i class="fa-solid fa-temperature-half"></i>
                <span>Hissedilen</span>
                <strong>@Math.Round(Model.main.feels_like)°C</strong>
            </div>

            <div class="detail-item">
                <i class="fa-solid fa-droplet"></i>
                <span>Nem</span>
                <strong>@Model.main.humidity%</strong>
            </div>

            <div class="detail-item">
                <i class="fa-solid fa-wind"></i>
                <span>Rüzgar</span>
                <strong>@Math.Round(Model.wind.speed * 3.6) km/sa</strong>

            </div>

            <div class="detail-item">
                <i class="fa-solid fa-gauge-high"></i>
                <span>Basınç</span>
                <strong>@Model.main.pressure hPa</strong>
            </div>
        </div>

    </div>
}



<!-- Hero Section Begin -->
<section class="hero-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <div class="hero-text">
                    <h1>Sona Otel</h1>
                    <p>
                        Uluslararası seyahatler için öneriler sunan ve uygun fiyatlı otel
                        odalarını bulmanızı sağlayan en iyi otel rezervasyon sitelerini keşfedin.
                    </p>
                    <a href="/" class="primary-btn">Keşfet</a>
                </div>
            </div>


            <div class="col-xl-4 col-lg-5 offset-xl-2 offset-lg-1">
                <div class="booking-form">
                    <h3>Aradığınız oteli hemen bulun </h3>

                    <form asp-controller="Home"
                          asp-action="Index"
                          method="get">



                        <div class="check-date">
                            <label>Şehir</label>
                            <input type="text"
                                   name="cityName"
                                   placeholder="Istanbul"
                                   required />
                        </div>


                        <div class="check-date">
                            <label>Giriş Tarihi</label>
                            <input type="date"
                                   name="checkIn" />
                        </div>

                       
                        <div class="check-date">
                            <label>Çıkış tarihi</label>
                            <input type="date"
                                   name="checkOut" />
                        </div>

                       
                        <div class="select-option">
                            <label>Misafir Sayısı</label>
                            <select name="adults">
                                <option value="1">1 Yetişkin</option>
                                <option value="2" selected>2 Yetişkin</option>
                                <option value="3">3 Yetişkin</option>
                                <option value="4">4 Yetişkin</option>
                            </select>
                        </div>

                        <button type="submit">Otel Ara..</button>
                    </form>
                </div>

            </div>
     
        </div>
    </div>
    <div class="hero-slider owl-carousel">
        <div class="hs-item set-bg" data-setbg="/sona-master/img/hero/hero-2.jpg"></div>
        <div class="hs-item set-bg" data-setbg="/sona-master/img/hero/hero-7.jpg"></div>
        <div class="hs-item set-bg" data-setbg="/sona-master/img/hero/hero-4.jpg"></div>
        <div class="hs-item set-bg" data-setbg="/sona-master/img/hero/hero-5.avif"></div>
    </div>
</section>
