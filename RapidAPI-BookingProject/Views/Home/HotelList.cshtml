@model List<ResultHotelListDto>

<div class="hotel-list">
    @foreach (var hotel in Model)
    {
        <div class="hotel-card"
             style="background-image:url('@hotel.photoMainUrl')">

            <div class="hotel-overlay"></div>

            <div class="hotel-content">

               
                <span class="hotel-rating">
                    ⭐ @hotel.reviewScore
                    <small>(@hotel.reviewCount)</small>
                </span>

              
                <h4 class="hotel-title">
                    <a asp-controller="Home"
                       asp-action="HotelDetail"
                       asp-route-hotelId="@hotel.id"
                       asp-route-checkIn="@hotel.checkinDate"
                       asp-route-checkOut="@hotel.checkoutDate">
                        @hotel.name
                    </a>
                </h4>

               
                @if (!string.IsNullOrEmpty(hotel.propertyType))
                {
                    <div class="hotel-type">
                        @hotel.propertyType
                    </div>
                }

              
                @if (!string.IsNullOrEmpty(hotel.countryCode))
                {
                    <div class="hotel-country">
                        🌍 @hotel.countryCode
                    </div>
                }

               
                <div class="hotel-dates">
                    @hotel.checkinDate → @hotel.checkoutDate
                </div>

               
                <div class="hotel-currency">
                    @hotel.currency
                </div>

               
                @if (!string.IsNullOrEmpty(hotel.wishlistName))
                {
                    <div class="hotel-wishlist">
                        ❤️ @hotel.wishlistName
                    </div>
                }
            </div>
        </div>
    }
</div>


<style>
    .hotel-list {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
        gap: 24px;
       
        padding: 32px 40px;
    }

   
    .hotel-card {
        position: relative;
        height: 340px;
        border-radius: 20px;
        background-size: cover;
        background-position: center;
        overflow: hidden;
        cursor: pointer;
        transition: transform .35s ease, box-shadow .35s ease;
    }

        .hotel-card:hover {
            transform: translateY(-6px);
            box-shadow: 0 20px 40px rgba(0,0,0,.25);
        }

    /* foto kararması */
    .hotel-overlay {
        position: absolute;
        inset: 0;
        background: linear-gradient( to top, rgba(0,0,0,.8), rgba(0,0,0,.25), rgba(0,0,0,0) );
    }

    /* içerik */
    .hotel-content {
        position: absolute;
        bottom: 28px;
        left: 28px;
        right: 28px;
        color: #fff;
        z-index: 2;
    }

    /* rating */
    .hotel-rating {
        background: #ffb703;
        color: #000;
        font-weight: 600;
        font-size: 14px;
        padding: 6px 12px;
        border-radius: 14px;
        display: inline-block;
        margin-bottom: 12px;
    }

    /* başlık */
    .hotel-title {
        margin: 6px 0 10px;
        font-size: 19px;
        line-height: 1.45;
    }

        .hotel-title a {
            color: #fff;
            text-decoration: none;
        }

            .hotel-title a:hover {
                text-decoration: underline;
            }

    /* currency */
    .hotel-currency {
        font-size: 14px;
        opacity: .9;
    }
    /* ---- EKLENEN ALANLAR ---- */

    /* otel tipi (Hotel / Apartment vb.) */
    .hotel-type {
        font-size: 13px;
        opacity: .9;
        margin-bottom: 4px;
    }

    /* ülke kodu */
    .hotel-country {
        font-size: 13px;
        opacity: .85;
        margin-bottom: 4px;
    }

    /* tarih aralığı */
    .hotel-dates {
        font-size: 13px;
        font-weight: 500;
        opacity: .9;
        margin-bottom: 6px;
    }

    /* wishlist bilgisi */
    .hotel-wishlist {
        font-size: 13px;
        font-weight: 600;
        color: #ffb703;
        margin-top: 6px;
    }

    /* rating içindeki yorum sayısı */
    .hotel-rating small {
        font-size: 12px;
        font-weight: 500;
        margin-left: 4px;
    }

</style>