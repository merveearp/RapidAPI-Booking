

@model HotelDetailViewModel
@{
    ViewData["Title"] = Model.Detail.hotel_name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- ===================== -->
<!-- FOTO SLIDER (ÜST) -->
<!-- ===================== -->

<link rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css" />

<div class="hotel-detail-slider swiper">
    <div class="swiper-wrapper">
        @foreach (var photo in Model.Photos)
        {
            <div class="swiper-slide">
                <img src="@photo.url_1440"
                     alt="Hotel Photo"
                     class="hotel-slide-img" />
            </div>
        }
    </div>

    <!-- oklar -->
    <div class="swiper-button-next"></div>
    <div class="swiper-button-prev"></div>
</div>

<!-- ===================== -->
<!-- OTEL DETAY BİLGİLERİ -->
<!-- ===================== -->

<div class="hotel-detail-container">

    <h1 class="hotel-name">
        @Model.Detail.hotel_name
    </h1>

    <p class="hotel-address">
        @Model.Detail.address
    </p>

    <div class="hotel-dates">
        <strong>@Model.CheckIn</strong> → <strong>@Model.CheckOut</strong>
    </div>

    <!-- FACILITIES -->
    @if (Model.Detail.facilities_block?.facilities != null)
    {
        <h3>Otel Olanakları</h3>
        <ul class="hotel-facilities">
            @foreach (var item in Model.Detail.facilities_block.facilities)
            {
                <li>@item.name</li>
            }
        </ul>
    }

</div>

<!-- ===================== -->
<!-- SCRIPTS -->
<!-- ===================== -->

<script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>

<script>
    new Swiper('.hotel-detail-slider', {
        loop: true,
        navigation: {
            nextEl: '.swiper-button-next',
            prevEl: '.swiper-button-prev'
        }
    });
</script>

<!-- ===================== -->
<!-- STYLES -->
<!-- ===================== -->

<style>
    .hotel-detail-slider {
        width: 100%;
        height: 480px;
        border-radius: 24px;
        overflow: hidden;
        margin-bottom: 40px;
    }

    .hotel-slide-img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .hotel-detail-container {
        max-width: 1100px;
        margin: auto;
        padding: 0 20px 60px;
    }

    .hotel-name {
        font-size: 32px;
        font-weight: 700;
        margin-bottom: 10px;
    }

    .hotel-address {
        color: #666;
        margin-bottom: 14px;
    }

    .hotel-dates {
        font-size: 15px;
        margin-bottom: 16px;
    }

    .hotel-review {
        font-size: 16px;
        font-weight: 600;
        margin-bottom: 30px;
    }

    .hotel-facilities {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(220px, 1fr));
        gap: 10px;
        padding-left: 0;
        list-style: none;
    }

        .hotel-facilities li {
            background: #f8f9fa;
            padding: 10px 14px;
            border-radius: 10px;
            font-size: 14px;
        }
</style>


