@model List<ResultArticleDto.Item>

@*
    _UIArticleComponent
*@

@if (Model != null && Model.Any())
{
    <section class="article-section my-5">
        <div class="section-title mb-4">
            <h4 class="fw-bold">📰 Güncel Haberler</h4>
            <p class="text-muted">Dünyadan ve Türkiye'den seçili haberler</p>
        </div>

        <div class="row">
            @foreach (var article in Model.Take(12))
            {
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="article-card h-100">
                        @if (article.images?.thumbnail != null)
                        {
                            <div class="article-img">
                                <a href="@article.images.thumbnail" target="_blank">
                                    <img src="@article.images.thumbnail"
                                         alt="@article.title"
                                         loading="lazy"
                                         onerror="this.style.display='none'" />
                                </a>
                            </div>
                        }


                        <div class="article-body">
                            <h6 class="article-title">
                                @article.title
                            </h6>

                            <p class="article-snippet">
                                @article.snippet
                            </p>

                            <div class="article-footer">
                                <span class="publisher">
                                    @article.publisher
                                </span>

                                <a href="@article.newsUrl"
                                   target="_blank"
                                   class="read-more">
                                    Detay →
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </section>
}

 <style>


    .article-card {
        background: #fff;
        border-radius: 14px;
        overflow: hidden;
        box-shadow: 0 8px 20px rgba(0,0,0,.08);
        transition: all .3s ease;
    }

        .article-card:hover {
            transform: translateY(-4px);
            box-shadow: 0 14px 30px rgba(0,0,0,.12);
        }

    .article-img img {
        width: 100%;
        height: 180px;
        object-fit: cover;
    }

    .article-body {
        padding: 15px;
    }

    .article-title {
        font-size: 15px;
        font-weight: 600;
        margin-bottom: 8px;
        line-height: 1.4;
    }

    .article-snippet {
        font-size: 13px;
        color: #666;
        line-height: 1.5;
        margin-bottom: 12px;
    }

    .article-footer {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .publisher {
        font-size: 12px;
        color: #999;
    }

    .read-more {
        font-size: 13px;
        font-weight: 600;
        color: #0071c2;
        text-decoration: none;
    }

        .read-more:hover {
            text-decoration: underline;
        }

 </style>