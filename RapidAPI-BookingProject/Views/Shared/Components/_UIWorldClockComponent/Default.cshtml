        </div>

    </div>
</div>

<script>
    function updateAnalogClocks() {
        document.querySelectorAll(".clock-card").forEach(card => {
            const tz = card.dataset.timezone;
            const now = new Date(
                new Date().toLocaleString("en-US", { timeZone: tz })
            );

            const seconds = now.getSeconds();
            const minutes = now.getMinutes();
            const hours = now.getHours();

            const secondDeg = seconds * 6;
            const minuteDeg = minutes * 6 + seconds * 0.1;
            const hourDeg = hours * 30 + minutes * 0.5;

            card.querySelector(".second").style.transform = `rotate(${secondDeg}deg)`;
            card.querySelector(".minute").style.transform = `rotate(${minuteDeg}deg)`;
            card.querySelector(".hour").style.transform = `rotate(${hourDeg}deg)`;
        });
    }

    setInterval(updateAnalogClocks, 1000);
    updateAnalogClocks();
</script>

<style>

    .world-clock-wrapper {
        padding: 20px;
    }

    .clock-grid {
        display: flex;
        gap: 20px;
        flex-wrap: wrap;
    }

    .clock-card {
        text-align: center;
        width: 140px;
    }

    .clock {
        position: relative;
        width: 120px;
        height: 120px;
        border: 6px solid #222;
        border-radius: 50%;
        margin: auto;
    }

    .hand {
        position: absolute;
