

<div class="world-clock-wrapper">
    <h1><span class="clock-icon">🌍</span>Dünya Saatleri</h1>
    <div class="clock-grid">
        <div class="clock-card" data-timezone="Europe/Istanbul">
            <div class="clock">
                <div class="hand hour"></div>
                <div class="hand minute"></div>
                <div class="hand second"></div>
                <div class="center-dot"></div>
            </div>
            <div class="city-name">🇹🇷 İstanbul</div>
            <div class="digital-time">--:--:--</div>
        </div>
        <div class="clock-card" data-timezone="Europe/London">
            <div class="clock">
                <div class="hand hour"></div>
                <div class="hand minute"></div>
                <div class="hand second"></div>
                <div class="center-dot"></div>
            </div>
            <div class="city-name">🇬🇧 Londra</div>
            <div class="digital-time">--:--:--</div>
        </div>
        <div class="clock-card" data-timezone="America/New_York">
            <div class="clock">
                <div class="hand hour"></div>
                <div class="hand minute"></div>
                <div class="hand second"></div>
                <div class="center-dot"></div>
            </div>
            <div class="city-name">🇺🇸 New York</div>
            <div class="digital-time">--:--:--</div>
        </div>
        <div class="clock-card" data-timezone="Asia/Tokyo">
            <div class="clock">
                <div class="hand hour"></div>
                <div class="hand minute"></div>
                <div class="hand second"></div>
                <div class="center-dot"></div>
            </div>
            <div class="city-name">🇯🇵 Tokyo</div>
            <div class="digital-time">--:--:--</div>
        </div>
    </div>
</div>

<script>
    function updateWorldClocks() {
        document.querySelectorAll(".clock-card").forEach(card => {
            const tz = card.dataset.timezone;
            const now = new Date();

            const timeString = now.toLocaleString("tr-TR", {
                timeZone: tz,
                hour12: false,
                hour: '2-digit',
                minute: '2-digit',
                second: '2-digit'
            });

            card.querySelector(".digital-time").textContent = timeString;

            const localTime = new Date(now.toLocaleString("en-US", { timeZone: tz }));
            const seconds = localTime.getSeconds();
            const minutes = localTime.getMinutes();
            const hours = localTime.getHours() % 12;

            const secondDeg = seconds * 6;
            const minuteDeg = minutes * 6 + seconds * 0.1;
            const hourDeg = hours * 30 + minutes * 0.5;

            card.querySelector(".second").style.transform = `rotate(${secondDeg}deg)`;
            card.querySelector(".minute").style.transform = `rotate(${minuteDeg}deg)`;
            card.querySelector(".hour").style.transform = `rotate(${hourDeg}deg)`;
        });
    }

    setInterval(updateWorldClocks, 1000);
    updateWorldClocks();
</script>

