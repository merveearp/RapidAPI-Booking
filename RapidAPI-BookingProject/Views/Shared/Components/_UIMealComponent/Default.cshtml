@model RapidAPI_BookingProject.Dtos.MealDtos.TheMealDbResponse.Meal

@if (Model == null)
{
    <div class="alert alert-warning">
        Günün yemeği şu an yüklenemedi 🍽️
    </div>
}
else
{
    <div class="daily-dish-card">
        <div class="dish-header">
            <span class="dish-emoji">🍽️</span>

            <div class="dish-theme">
                @Model.strArea Mutfağı
            </div>

            <h3 class="dish-name">
                @Model.strMeal
            </h3>
        </div>

        <div class="dish-image">
            <img src="@Model.strMealThumb"
                 alt="@Model.strMeal"
                 onerror="this.src='/images/food/default-food.jpg';" />
        </div>

        <p class="dish-description">
            @Model.strInstructions
        </p>
    </div>
}
<style>
    .daily-dish-card {
        background: white;
        border-radius: 20px;
        padding: 25px;
        box-shadow: 0 8px 30px rgba(0,0,0,0.08);
        margin: 0;
        animation: slideIn 0.6s ease-out;
        border: 1px solid #f0f0f0;
        transition: all 0.3s ease;
        height: 100%;
    }

        .daily-dish-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 12px 40px rgba(0,0,0,0.12);
        }

    @@keyframes slideIn {
        from {
            opacity: 0;
            transform: translateY(-20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .dish-header {
        text-align: center;
        margin-bottom: 20px;
    }

    .dish-emoji {
        font-size: 50px;
        display: block;
        margin-bottom: 12px;
        animation: bounce 2s infinite;
    }

    @@keyframes bounce {
        0%, 100% {
            transform: translateY(0);
        }

        50% {
            transform: translateY(-10px);
        }
    }

    .dish-theme {
        font-size: 12px;
        color: #10b981;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 1.5px;
        margin-bottom: 8px;
        background: #d1fae5;
        display: inline-block;
        padding: 6px 16px;
        border-radius: 50px;
    }

    .dish-name {
        font-size: 24px;
        font-weight: 800;
        margin: 12px 0;
        color: #1f2937;
        letter-spacing: -0.5px;
    }

    .dish-image {
        width: 100%;
        height: 220px;
        border-radius: 16px;
        overflow: hidden;
        margin: 20px 0;
        box-shadow: 0 6px 20px rgba(0,0,0,0.1);
        position: relative;
        background: #f3f4f6;
    }

        .dish-image::before {
            content: '';
            position: absolute;
            inset: 0;
            background: linear-gradient(to bottom, transparent 60%, rgba(0,0,0,0.1));
            z-index: 1;
        }

        .dish-image img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.3s ease;
        }

        .dish-image:hover img {
            transform: scale(1.05);
        }

    .dish-description {
        font-size: 15px;
        line-height: 1.6;
        text-align: center;
        margin: 0;
        color: #6b7280;
        font-weight: 400;
    }

    /* Responsive */
   @@media (max-width: 768px) {
        .daily-dish-card {
            padding: 20px;
        }

        .dish-emoji {
            font-size: 40px;
        }

        .dish-name {
            font-size: 20px;
        }

        .dish-image {
            height: 180px;
        }

        .dish-description {
            font-size: 14px;
        }
    }
</style>
