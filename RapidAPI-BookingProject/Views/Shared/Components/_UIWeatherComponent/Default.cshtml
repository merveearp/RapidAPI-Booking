@model ResultWeatherDto
@*
  _UIWeatherComponent
*@

@{

    var icon = Model.weather[0].icon;
    bool isNight = icon.EndsWith("n");
    var iconUrl = $"https://openweathermap.org/img/wn/{icon}@2x.png";
}

@if (Model?.weather != null && Model.weather.Length > 0)
{

    <div class="weather-card @(isNight ? "night" : "day")">

        <div class="weather-header">
            <div class="weather-icon">
                <img src="https://openweathermap.org/img/wn/@(Model.weather[0].icon + "@2x.png")"
                     alt="@Model.weather[0].description" />

            </div>

            <div class="weather-main">
                <h4>@Model.name, @Model.sys.country</h4>
                <div class="weather-temp">@Math.Round(Model.main.temp)°C</div>
                <span class="weather-desc">@Model.weather[0].description</span>
            </div>
        </div>

        <div class="weather-details">
            <div class="detail-item">
                <i class="fa-solid fa-temperature-half"></i>
                <span>Hissedilen</span>
                <strong>@Math.Round(Model.main.feels_like)°C</strong>
            </div>

            <div class="detail-item">
                <i class="fa-solid fa-droplet"></i>
                <span>Nem</span>
                <strong>@Model.main.humidity%</strong>
            </div>

            <div class="detail-item">
                <i class="fa-solid fa-wind"></i>
                <span>Rüzgar</span>
                <strong>@Math.Round(Model.wind.speed * 3.6) km/sa</strong>

            </div>

            <div class="detail-item">
                <i class="fa-solid fa-gauge-high"></i>
                <span>Basınç</span>
                <strong>@Model.main.pressure hPa</strong>
            </div>
        </div>

    </div>
}


<style>
    .weather-card {
        max-width: 420px;
        padding: 20px;
        border-radius: 18px;
        box-shadow: 0 15px 40px rgba(0,0,0,0.12);
        background: #ffffff;
        margin-bottom: 30px;
    }

        .weather-card.day {
            background: linear-gradient(135deg, #e3f2fd, #ffffff);
        }

        .weather-card.night {
            background: linear-gradient(135deg, #1e293b, #020617);
            color: #fff;
        }

    .weather-header {
        display: flex;
        align-items: center;
        gap: 15px;
        margin-bottom: 20px;
    }

    .weather-icon img {
        width: 80px;
    }

    .weather-main h4 {
        margin: 0;
        font-weight: 600;
    }

    .weather-temp {
        font-size: 36px;
        font-weight: 700;
    }

    .weather-desc {
        font-size: 14px;
        opacity: 0.8;
        text-transform: capitalize;
    }

    .weather-details {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 15px;
    }

    .detail-item {
        display: flex;
        align-items: center;
        gap: 10px;
        background: rgba(255,255,255,0.6);
        padding: 10px 12px;
        border-radius: 12px;
        font-size: 14px;
    }

    .weather-card.night .detail-item {
        background: rgba(255,255,255,0.1);
    }

    .detail-item i {
        font-size: 18px;
        color: #ff9800;
    }

</style>

