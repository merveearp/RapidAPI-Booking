@model ResultWeatherDto
@*
  _UIWeatherComponent
*@

@{

    var icon = Model.weather[0].icon;
    bool isNight = icon.EndsWith("n");
    var iconUrl = $"https://openweathermap.org/img/wn/{icon}@2x.png";
}

@if (Model?.weather != null && Model.weather.Length > 0)
{

    <div class="info-card weather-card @(isNight ? "night" : "day")">


        <div class="weather-header">
            <div class="weather-icon">
                <div class="weather-icon">
                    <img src="https://openweathermap.org/img/wn/@(Model.weather[0].icon + "@2x.png")"
                         alt="@Model.weather[0].description" />
                </div>

            </div>

            <div class="weather-main">
                <h4>@Model.name, @Model.sys.country</h4>
                <div class="weather-temp">@Math.Round(Model.main.temp)°C</div>
                <span class="weather-desc">@Model.weather[0].description</span>
            </div>
        </div>

        <div class="weather-details">
            <div class="detail-item">
                <i class="fa-solid fa-temperature-half"></i>
                <span>Hissedilen</span>
                <strong>@Math.Round(Model.main.feels_like)°C</strong>
            </div>

            <div class="detail-item">
                <i class="fa-solid fa-droplet"></i>
                <span>Nem</span>
                <strong>@Model.main.humidity%</strong>
            </div>

            <div class="detail-item">
                <i class="fa-solid fa-wind"></i>
                <span>Rüzgar</span>
                <strong>@Math.Round(Model.wind.speed * 3.6) km/sa</strong>

            </div>

            <div class="detail-item">
                <i class="fa-solid fa-gauge-high"></i>
                <span>Basınç</span>
                <strong>@Model.main.pressure hPa</strong>
            </div>
        </div>

    </div>
}


<style>
    .weather-card {
        width: 100%;
        min-height: 220px;
    }

    .weather-header {
        display: flex;
        align-items: center;
        gap: 16px;
        margin-bottom: 18px;
    }

    .weather-icon {
        width: 72px;
        height: 72px;
        border-radius: 50%;
        background: rgba(255,255,255,0.9);
        display: flex;
        align-items: center;
        justify-content: center;
        box-shadow: 0 6px 18px rgba(0,0,0,0.15);
    }

        .weather-icon img {
            width: 52px;
            height: 52px;
            filter: drop-shadow(0 3px 6px rgba(0,0,0,.25));
        }

    .weather-card.night .weather-icon {
        background: rgba(255,255,255,0.15);
    }

        .weather-card.night .weather-icon img {
            filter: drop-shadow(0 3px 6px rgba(255,255,255,.35));
        }

    .weather-details {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 12px;
    }

    .detail-item {
        display: flex;
        align-items: center;
        gap: 10px;
        background: rgba(255,255,255,0.75);
        padding: 10px 12px;
        border-radius: 12px;
        font-size: 14px;
    }

    .weather-card.night .detail-item {
        background: rgba(255,255,255,0.12);
    }

</style>

