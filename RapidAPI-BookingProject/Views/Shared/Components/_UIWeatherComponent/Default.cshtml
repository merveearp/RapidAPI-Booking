

@model ResultWeatherDto
@*
  _UIWeatherComponent
*@

@{
    var icon = Model.weather[0].icon;
    bool isNight = icon.EndsWith("n");
    var iconUrl = $"https://openweathermap.org/img/wn/{icon}@4x.png";
}

@if (Model?.weather != null && Model.weather.Length > 0)
{
    <div class="weather-card-final">

    


        <div class="weather-icon-area @(isNight ? "night" : "day")">

            <div class="weather-city">
                <i class="fa-solid fa-location-dot"></i>
                @Model.name, @Model.sys.country
            </div>

            <img src="@iconUrl" alt="weather icon">

            <div class="weather-main-temp">
                @Math.Round(Model.main.temp)°C
            </div>

        </div>

        <div class="weather-left-info">
            <ul>
                <li>
                    <i class="fa-solid fa-temperature-half text-danger"></i>
                    Hissedilen: <strong>@Math.Round(Model.main.feels_like)°C</strong>
                </li>
                <li>
                    <i class="fa-solid fa-droplet text-primary"></i>
                    Nem: <strong>@Model.main.humidity%</strong>
                </li>
                <li>
                    <i class="fa-solid fa-wind text-success"></i>
                    Rüzgar: <strong>@Math.Round(Model.wind.speed * 3.6) km/s</strong>
                </li>
                <li>
                    <i class="fa-solid fa-gauge-high text-warning"></i>
                    Basınç: <strong>@Model.main.pressure hPa</strong>
                </li>
            </ul>
        </div>

    </div>
}



<style>

    .weather-card-final {
        background: #fff;
        border-radius: 16px;
        padding: 20px;
        box-shadow: 0 6px 18px rgba(0,0,0,0.08);
        display: flex;
        gap: 20px;
        align-items: stretch;
        min-height: 200px;
    }

    /* SOL TARAF */
    .weather-left-info {
        flex: 1;
        display: flex;
        align-items: center;
    }

        .weather-left-info ul {
            list-style: none;
            padding: 0;
            margin: 0;
        }

        .weather-left-info li {
            font-size: 14px;
            margin-bottom: 10px;
            display: flex;
            align-items: center;
            gap: 10px;
            color: #333;
        }

    /* SAĞ TARAF – ICON KUTUSU */
    .weather-icon-area {
        width: 220px;
        border-radius: 16px;
        padding: 14px 12px;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: space-between;
        color: #fff;
    }

        .weather-icon-area img {
            width: 90px;
            height: 90px;
        }

    /* Şehir */
    .weather-city {
        font-size: 13px;
        font-weight: 600;
        display: flex;
        align-items: center;
        gap: 6px;
        opacity: 0.95;
    }

    /* Derece */
    .weather-main-temp {
        font-size: 32px;
        font-weight: 800;
    }

    /* DAY / NIGHT */
    .weather-icon-area.day {
        background: linear-gradient(135deg, #60a5fa, #38bdf8);
    }

    .weather-icon-area.night {
        background: linear-gradient(135deg, #1e3a8a, #312e81);
    }

    /* MOBİL */
    @@media (max-width: 768px) {
        .weather-card-final {
            flex-direction: column;
        }

        .weather-icon-area {
            width: 100%;
        }
    }

    /* KART HOVER */
    .weather-card-final {
        transition: all 0.3s ease;
    }

        .weather-card-final:hover {
            transform: translateY(-4px);
            box-shadow: 0 14px 32px rgba(0,0,0,0.12);
        }

    /* ICON ALANI HOVER */
    .weather-icon-area {
        transition: all 0.3s ease;
    }

    .weather-card-final:hover .weather-icon-area.day {
        box-shadow: 0 0 0 6px rgba(56,189,248,0.25);
    }

    .weather-card-final:hover .weather-icon-area.night {
        box-shadow: 0 0 0 6px rgba(49,46,129,0.35);
    }

    /* ICON HAFİF CANLANSIN */
    .weather-icon-area img {
        transition: transform 0.3s ease;
    }

    .weather-card-final:hover .weather-icon-area img {
        transform: scale(1.08);
    }

</style>