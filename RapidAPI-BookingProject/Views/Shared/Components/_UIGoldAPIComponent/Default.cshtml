@model ResultGoldPriceDto
@*
    _UIGoldAPIComponent
*@

@if (Model?.data != null && Model.data.Any())
{
    <div class="info-card gold-card">

        <div class="gold-header">
            <i class="fa-solid fa-coins"></i>
            <h5>Altın & Gümüş Fiyatları</h5>
        </div>

        <div class="gold-list">
            @foreach (var item in Model.data)
            {
                var isUp = item.arrow?.ToLower() == "up";

                <div class="gold-row">
                    <div class="gold-name">
                        @item.key
                    </div>

                    <div class="gold-prices">
                        <span class="buy">
                            Alış: <strong>@item.buy ₺</strong>
                        </span>
                        <span class="sell">
                            Satış: <strong>@item.sell ₺</strong>
                        </span>
                    </div>

                    <div class="gold-change @(isUp ? "up" : "down")">
                        <i class="fa-solid @(isUp ? "fa-arrow-up" : "fa-arrow-down")"></i>
                        <span>@item.percent%</span>
                    </div>
                </div>
            }
        </div>

        <div class="gold-footer">
            <i class="fa-regular fa-clock"></i>
            Son Güncelleme: @Model.data.First().last_update
        </div>

    </div>
}

                    <style>



    .gold-card {
        background: linear-gradient(135deg, #fffaf0, #ffffff);
        border-radius: 22px;
        padding: 26px;
        box-shadow: 0 18px 45px rgba(0,0,0,0.1);
        border: 1px solid rgba(218,165,32,0.35);
    }

    .gold-header {
        display: flex;
        align-items: center;
        gap: 10px;
        margin-bottom: 18px;
    }

        .gold-header i {
            font-size: 22px;
            color: #d4af37;
        }

        .gold-header h5 {
            margin: 0;
            font-weight: 600;
        }

    .gold-list {
        display: flex;
        flex-direction: column;
        gap: 14px;
    }

    .gold-row {
        display: grid;
        grid-template-columns: 1.2fr 2fr 0.8fr;
        align-items: center;
        padding: 14px 16px;
        background: #ffffff;
        border-radius: 14px;
        box-shadow: 0 6px 16px rgba(0,0,0,0.06);
    }

    .gold-name {
        font-weight: 600;
        font-size: 14px;
    }

    .gold-prices {
        display: flex;
        gap: 18px;
        font-size: 13px;
        color: #444;
    }

    .gold-change {
        display: flex;
        align-items: center;
        justify-content: flex-end;
        gap: 6px;
        font-weight: 600;
    }

        .gold-change.up {
            color: #2e7d32;
        }

        .gold-change.down {
            color: #c62828;
        }

    .gold-footer {
        margin-top: 18px;
        font-size: 12px;
        color: #666;
        display: flex;
        align-items: center;
        gap: 6px;
    }

                    </style>